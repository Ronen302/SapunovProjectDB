<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:properties="clr-namespace:SapunovProjectDB.Properties">
    <Style x:Key="headerLogoPath" TargetType="Path">
        <Setter Property="Fill" Value="#6e7783"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Source={x:Static properties:Settings.Default}, Path=ColorMode}" Value="Dark">
                <Setter Property="Fill" Value="#b5bac1"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>