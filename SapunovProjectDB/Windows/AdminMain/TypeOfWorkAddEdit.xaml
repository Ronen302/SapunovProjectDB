<Window x:Class="SapunovProjectDB.Windows.AdminMain.TypeOfWorkAddEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:Icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SapunovProjectDB.Windows.AdminMain"
        mc:Ignorable="d"
        Title="Детали услуги" Height="660" Width="620"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="20 0 20 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Border x:Name="MainBorder" CornerRadius="10" Style="{DynamicResource mainBorderAddWindow}"
                Grid.Row="1" MouseLeftButtonDown="MainBorder_MouseLeftButtonDown">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Style="{DynamicResource thirdyAuthBorder}"
                        Grid.Row="2" Margin="20 -10 20 -30" CornerRadius="10"/>

                <!--Form Title-->
                <StackPanel Orientation="Horizontal" Margin="20 20 20 0">
                    <Icons:PackIconMaterial Kind="Greenhouse" Width="25" Height="25" 
                                        Style="{DynamicResource addWindowIcon}"/>
                    <TextBlock Text="Детали услуги" FontSize="18" Margin="15 0 0 0" VerticalAlignment="Center"
                           Style="{DynamicResource addWindowTitleText}"/>
                    <TextBlock x:Name="ValidationErrorMsg" Margin="15 5 0 0"
                                        FontSize="14" Foreground="#e64646" Visibility="Collapsed"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Separator Grid.Row="1" Grid.ColumnSpan="2" Height="1" Margin="20 0 20 20"
                       Style="{DynamicResource mainPageSeparator}"/>

                <!--Inputs-->
                <Border Style="{DynamicResource secondaryBorderMainPage}" Margin="0 0 0 -20"
                        CornerRadius="8" Width="450" HorizontalAlignment="Center"
                        VerticalAlignment="Top" Grid.Row="2">
                    <StackPanel Orientation="Vertical" Grid.Row="2" Height="450">

                        <StackPanel Margin="20 10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Название*" Style="{DynamicResource textHintAddWindow}" FontSize="14" Margin="0 0 0 8"/>
                            </StackPanel>
                            <TextBox Name="ServiceNameTextBox" Style="{DynamicResource inputTextBox}"
                                     Text="{Binding NameTypeOfWork}"/>
                        </StackPanel>

                        <StackPanel Margin="20 10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Цена*" Style="{DynamicResource textHintAddWindow}" FontSize="14" Margin="0 0 0 8"/>
                            </StackPanel>
                            <TextBox Name="ServicePriceTextBox" Style="{DynamicResource inputTextBox}"
                                     Text="{Binding PriceOfWork}"/>
                        </StackPanel>

                        <StackPanel Margin="20 10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Описание" Style="{DynamicResource textHintAddWindow}" FontSize="14" Margin="0 0 0 8"/>
                            </StackPanel>
                            <TextBox Name="ServiceDescriptionTextBox" Style="{DynamicResource inputTextBox}"
                                     Text="{Binding DescriptionOfWork}" Height="100" TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--Form Bottom Background-->
                <Border Grid.Row="6" Height="80" CornerRadius="0 0 10 10" Margin="0,40,0,0"
                    Style="{DynamicResource secondaryBorderMainPage}" BorderThickness="0 1.5 0 0" Grid.ColumnSpan="2"/>

                <!--Main Button-->
                <Button x:Name="userSaveButton" Grid.Column="1" Grid.Row="6" Content="Сохранить" HorizontalAlignment="Right" Margin="0 40 20 0" Style="{DynamicResource loginButton}"
                        Width="120" Click="userSaveButton_Click"/>

                <!--Secondary Button-->
                <Button x:Name="cancelButton" Grid.Row="6" Content="Отмена" HorizontalAlignment="Left" Margin="20 40 0 0" Style="{DynamicResource registrationButton}" Width="120"
                        IsCancel="True"/>
            </Grid>
        </Border>
    </Grid>
</Window>
